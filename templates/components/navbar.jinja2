<div class="top_menu">
    <div class="menu_left">
        <div class="img_field">
            <img src="{{ static('img/main.png') }}", width="25" height="25" />
        </div>
        <div class="title_field">
            <h4><a href="{{ url('home') }}" style="color: black; text-decoration: none;">QUST Online Judge For SQL</a></h4>
        </div>
        <div class="fun_field">
            <a href="{{ url('problem:list') }}" class="fun">题目集</a> |
            <a href="{{ url('contest:list') }}" class="fun">测试</a>
            {% if request.user.is_authenticated and request.user.is_superuser %}
                |<a href="{{ url('polygon:problem_list') }}" class="fun">题目管理</a>
                |<a href="{{ url('schoolclass:show_class', args=(0, )) }}" class="fun">班级管理</a>
                |<a href="{{ url('polygon:contest_list') }}" class="fun">实验管理</a>
            {% endif %}
        </div>
    </div>
    <div class="menu_right">
        {% if request.user.is_authenticated %}
            <div class="user_field">
                <a href="{{ url('password') }}">{{ request.user.username }}</a>
            </div>
            <div class="log_field">
                <a href="{{ url('logout') }}">登出</a>
            </div>
        {% elif not_has %}
            <div class="user_field">
                <a href=""> </a>
            </div>
            <div class="log_field">
                <a href="{{ url('register') }}">注册</a>
            </div>
        {% else %}
            <div class="user_field">
                <a href=""> </a>
            </div>
            <div class="log_field">
                <a href="{{ url('login') }}">登录</a>
            </div>
        {% endif %}
    </div>
</div>